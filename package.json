{
  "name": "collabcanvas",
  "version": "0.1.0",
  "private": true,
  "description": "Collaborative canvas MVP",
  "type": "module",
  "scripts": {
    "build": "npm-run-all frontend:install frontend:build build:ts",
    "build:ts": "tsc -p tsconfig.json",
    "dev": "npm-run-all wrangler:types dev:worker",
    "frontend:install": "npm --prefix web ci",
    "frontend:build": "npm --prefix web run build",
    "frontend:dev": "npm --prefix web run dev -- --host",
    "frontend:test": "npm --prefix web run test",
    "test": "npm-run-all wrangler:types test:run",
    "lint": "biome check .",
    "format": "biome format .",
    "deploy": "wrangler deploy",
    "wrangler:types": "wrangler types worker-configuration.d.ts",
    "dev:worker": "wrangler dev",
    "test:run": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adam0white/CollabCanvas.git"
  },
  "keywords": [
    "collaboration",
    "canvas",
    "yjs"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/adam0white/CollabCanvas/issues"
  },
  "homepage": "https://github.com/adam0white/CollabCanvas#readme",
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@cloudflare/vitest-pool-workers": "^0.8.71",
    "@types/node": "^24.7.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "vitest": "~3.2.0",
    "wrangler": "^4.42.2"
  },
  "dependencies": {
    "@clerk/backend": "^1.5.1",
    "y-durableobjects": "^1.0.5",
    "y-protocols": "^1.0.6",
    "y-websocket": "^3.0.0",
    "yjs": "^13.6.27"
  }
}
